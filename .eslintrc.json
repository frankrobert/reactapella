{
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react",
        "plugin:jest/recommended"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "globals": {
        "Rollbar": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "arrow-body-style": 0,
        "comma-dangle": ["warn", "never"],
        "consistent-return": 0,
        "max-len": 1,
        "newline-after-var": 1,
        "newline-before-return": 1,
        "no-underscore-dangle": 0,
        "spaced-comment": 0,
        "react/forbid-prop-types": "off",
        "react/require-default-props": "off"
    }
}